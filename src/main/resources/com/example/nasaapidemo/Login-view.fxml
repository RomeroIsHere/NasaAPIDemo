<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import org.kordamp.ikonli.javafx.FontIcon?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.nasaapidemo.Controllers.LoginController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-image: url('BackgroudLogIn.jpg'); -fx-background-size: cover">

        <center>
            <VBox spacing="20" alignment="CENTER">
                <Label text="User" style="-fx-text-fill: #fff; -fx-font-size: 40"/>
                <TextField fx:id="txtUser" promptText="Type User" prefHeight="50" maxWidth="300" style="-fx-background-color: rgba(255,255,255,0.29); -fx-font-size: 20"/>
                <Label text="Password" style="-fx-text-fill: #fff; -fx-font-size: 40"/>
                <TextField fx:id="txtPassword" promptText="Type Password" prefHeight="50" maxWidth="300" style="-fx-background-color: rgba(255,255,255,0.29); -fx-font-size: 20"/>
                <HBox spacing="10" alignment="CENTER">
                    <Button onAction="#m_onDirigir" style="-fx-background-color: rgba(55,146,119,0.84); -fx-font-size: 15" text="Log-In" contentDisplay="TOP" prefWidth="100" prefHeight="30">
                        <graphic>
                            <FontIcon iconLiteral="fas-door-closed" iconSize="40" iconColor="black"/>
                        </graphic>
                    </Button>
                    <Button text="Register" style="-fx-background-color: rgba(146,55,55,0.84); -fx-font-size: 15; -fx-text-fill: black" contentDisplay="TOP" styleClass="btn, btn-danger" prefWidth="100" prefHeight="30" onAction="#onRegist">
                        <graphic>
                            <FontIcon iconLiteral="fas-user-alt" iconSize="40" iconColor="black"/>
                        </graphic>
                    </Button>
                    <Button text="Invitado" style="-fx-background-color: rgba(146,55,55,0.84); -fx-font-size: 15; -fx-text-fill: black" contentDisplay="TOP" styleClass="btn, btn-danger" prefWidth="100" prefHeight="30" onAction="#onInvitado">
                        <graphic>
                            <FontIcon iconLiteral="fas-user-clock" iconSize="40" iconColor="black"/>
                        </graphic>
                    </Button>
                </HBox>
            </VBox>
        </center>
</BorderPane>
