<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.nasaapidemo.Controllers.MainController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-image: url('BackgroudLogIn.jpg'); -fx-background-size: cover">
    <center>
        <VBox alignment="CENTER" spacing="20">
            <VBox alignment="CENTER" spacing="15">
                <Label text="Aqui puedes ingresar la Key que tengas" style="-fx-font-size: 20; -fx-text-fill: white; -fx-background-color: red"/>
                <HBox spacing="5" alignment="CENTER">
                    <TextField fx:id="txtKey" style="-fx-font-size: 20" maxWidth="400"/>
                    <Button text="Aplicar" contentDisplay="TOP" styleClass="btn, btn-danger" onAction="#onKeyClick">
                        <graphic>
                            <FontIcon iconLiteral="fas-key" iconSize="20" iconColor="white"/>
                        </graphic>
                    </Button>
                </HBox>
            </VBox>
            <Button text="APOD" style="-fx-font-size: 15" contentDisplay="TOP" styleClass="btn, btn-info" onAction="#onAPODonClick" prefWidth="60" prefHeight="70">
                <graphic>
                    <FontIcon iconLiteral="fas-folder-open" iconSize="40" iconColor="white"/>
                </graphic>
            </Button>
            <Button text="IVL" style="-fx-font-size: 15" contentDisplay="TOP" styleClass="btn, btn-success" onAction="#onIVLonClick" prefWidth="60" prefHeight="70">
                <graphic>
                    <FontIcon iconLiteral="fas-camera-retro" iconSize="40" iconColor="white"/>
                </graphic>
            </Button>
            <Button text="Mars" style="-fx-font-size: 15" contentDisplay="TOP" styleClass="btn, btn-warning" onAction="#onMarsonClick" prefWidth="60" prefHeight="70">
                <graphic>
                    <FontIcon iconLiteral="fas-globe-americas" iconSize="40" iconColor="white"/>
                </graphic>
            </Button>
        </VBox>
    </center>
</BorderPane>
