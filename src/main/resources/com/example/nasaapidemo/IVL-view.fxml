<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.nasaapidemo.Controllers.IVLController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: #3a3838">

    <top>
        <VBox spacing="10" alignment="CENTER" style="-fx-background-image: url('BackgroudIVL.jpg'); -fx-background-size: cover" prefHeight="600">
            <Label text="Discover" style="-fx-font-size: 40;-fx-font-family: 'Arial Black'" textFill="white"/>
            <Label text="our intergalactic multimedia collections" style="-fx-font-size: 20;-fx-font-family: 'Arial Black'" textFill="white"/>
            <HBox alignment="CENTER" spacing="5">
                <TextField fx:id="txtBuscar" text="Search for ... (e.g 'Orion')" style="-fx-font-size: 30;-fx-background-color: #6a6a6a; -fx-text-fill: #fff" prefWidth="1000" prefHeight="15"/>
                <Button text="" styleClass="btn,btn-primary" onAction="#m_onClickBuscar" prefWidth="15" prefHeight="15">
                    <graphic>
                        <FontIcon iconLiteral="fas-search" iconSize="40" iconColor="white"/>
                    </graphic>
                </Button>
            </HBox>
            <HBox alignment="CENTER" spacing="15">
                <CheckBox fx:id="checkImages" selected="true" textFill="white" style="-fx-font-size: 30; -fx-background-color: #002387;" text="Images" AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="50.0"/>
                <CheckBox fx:id="checkVideos" selected="true" textFill="white" style="-fx-font-size: 30; -fx-background-color: #002387;" text="Videos" AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="50.0"/>
                <CheckBox fx:id="checkAudio" selected="true" textFill="white" style="-fx-font-size: 30; -fx-background-color: #002387;" text="Audio" AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="50.0"/>
            </HBox>
        </VBox>
    </top>
    <center>

    </center>
</BorderPane>