<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.nasaapidemo.Controllers.MarsController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-image: url('MarsBackground.jpg'); -fx-background-size: cover">

    <top>
        <VBox spacing="15" alignment="CENTER" >
            <Label text="Mars" style="-fx-font-size: 40;-fx-font-family: 'Arial Black'" textFill="blue"/>

            <HBox alignment="CENTER" spacing="10">
                <Button text="Get Information" styleClass="btn,btn-primary" contentDisplay="TOP" onAction="#m_onClickgetInformation">
                    <graphic>
                        <FontIcon iconLiteral="fas-download" iconSize="40" iconColor="white"/>
                    </graphic>
                </Button>
                <Button text="Save" styleClass="btn,btn-primary" contentDisplay="TOP">
                    <graphic>
                        <FontIcon iconLiteral="fas-save" iconSize="40" iconColor="white"/>
                    </graphic>
                </Button>
            </HBox>
            <Label/>
        </VBox>
    </top>


    <center>
        <VBox alignment="TOP_CENTER">
            <HBox alignment="CENTER">
                <TableView fx:id="a_tblAPOD">
                    <columns>
                        <TableColumn text="ID">
                            <cellValueFactory>
                                <PropertyValueFactory property="id"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Sol">
                            <cellValueFactory>
                                <PropertyValueFactory property="sol"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Earth date">
                            <cellValueFactory>
                                <PropertyValueFactory property="earthDate"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Image src">
                            <cellValueFactory>
                                <PropertyValueFactory property="imageSrc"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Id Camera">
                            <cellValueFactory>
                                <PropertyValueFactory property="idCamera"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Id Rover">
                            <cellValueFactory>
                                <PropertyValueFactory property="idRover"/>
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
            </HBox>
        </VBox>
    </center>
</BorderPane>
